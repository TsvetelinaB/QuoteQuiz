@model AnswerViewModel

@{
    ViewData["Title"] = "Answer";
}

<h2 class="display-5 text-left" style="color: gray">Who Said It?</h2>

<div style="background-color: mediumvioletred" class="jumbotron col-lg-12">
    <h2 class="display-5 text-center" style="color: white">"@Model.QuoteText"</h2>
</div>

<div class="col-lg-12 text-center">
    <h2 class="display-5 text-center">@Model.AnswerText</h2>
 </div>

<div class="col-lg-12 text-center">
    <h2 class="display-4 text-center">@Model.AuthorName</h2>
</div>

<div class="col-lg-12 text-center align-content-lg-center">
    <h5><a class="btn btn-success" asp-controller="Quotes" asp-action="RandomQuote">Next Quote</a></h5>
</div>

