@using FamousQuoteQuiz.ViewModels

@model QuoteViewModel

@{
    ViewData["Title"] = "Quote Quiz";
}

<h2 class="display-5 text-left" style="color: gray">Who Said It?</h2>

<div style="background-color: mediumvioletred" class="jumbotron col-lg-12">
    <h2 class="display-5 text-center" style="color: white">"@Model.QuoteText"</h2>
</div>

<div style="margin-bottom:7rem">
    <h2 class="display-5 text-center" style="color: forestgreen">@Model.AuthorName?</h2>
</div>


    <div style="width:90%; margin:auto">
        <span style="float:left; text-align:center">
            <button class="btn btn-success">Yes</button>
        </span>
        <span style="float:right; text-align:center">
            <button class="btn btn-danger">No</button>
        </span>
    </div>
